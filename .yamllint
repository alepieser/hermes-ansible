extends: default

rules:
  line-length: disable
  comments:
    min-spaces-from-content: 1
  comments-indentation: false
  braces:
    max-spaces-inside: 1
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true
  trailing-spaces: enable
  document-start: disable

ignore:
  - venv/
  - .venv/
  - .molecule/
  - .cache/
  - .pytest_cache/
  - .github/
  - alepieser.*/
