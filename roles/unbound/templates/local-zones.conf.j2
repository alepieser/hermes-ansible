# Local zones configuration for Unbound
# =====================================
# This file is automatically generated by Ansible
# Do not edit manually - changes will be overwritten

server:
{% if unbound_local_zones is defined and unbound_local_zones | length > 0 %}
{% for zone in unbound_local_zones %}
    # Local zone: {{ zone.name }}
    local-zone: "{{ zone.name }}" {{ zone.type | default('static') }}
{% if zone.records is defined and zone.records | length > 0 %}
{% for record in zone.records %}
    local-data: "{{ record }}"
{% endfor %}
{% endif %}

{% endfor %}
{% else %}
    # No local zones configured
{% endif %}
